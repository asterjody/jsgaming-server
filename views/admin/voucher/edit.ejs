<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Edit Voucher</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
                <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Edit voucher</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/voucher/edit/<%= voucher._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="name">Nama Game</label>
                          <input type="text" name="name" value="<%= voucher.name %>" class="form-control" id="name" placeholder="Nama Game" required>
                        </div>
                        <div class="form-group">
                          <label>Kategori</label>
                          <select name="category" class="form-control select2" style="width: 100%;">
                            <option selected="selected">Pilih Kategori</option>
                            <% category.forEach(category=> { %>
                              <option value="<%= category._id %>"
                                <% if(category._id.toString()=== voucher.category._id.toString()) { %>
                                  selected
                                  <% } %>
                                >   
                                <%= category.name %>
                              </option>
                            <% }) %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Nominal</label>
                          <div class="select2-blue">    
                            <select 
                                name="nominals" 
                                class="form-control select2" 
                                multiple="multiple" 
                                data-placeholder="Pilih Nominal"
                                style="width: 100%;"
                                required
                            >
                              <% nominal.forEach(nominal=> { %>
                              <option value="<%= nominal._id %>"
                                <% voucher.nominals.forEach(voucherNominal => { %>
                                <% if(nominal._id.toString()=== voucherNominal._id.toString()) { %>
                                  selected
                                  <% } %>
                                <% }) %>
                                >
                                <%= nominal.coinQuantity %> <%= nominal.coinName %> 
                              </option>
                              <% }) %>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="image">Gambar</label>
                          <input type="file" name="image" class="form-control" id="image" placeholder="Gambar">
                          <br/>
                          <img id="perview" alt="Gambar Voucher" src="http://localhost:3000/uploads/<%= voucher.thumbnail %>" width="300px" length="200px">
                        </div>
                      </div>
                      <!-- /.card-body -->
      
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                      </div>
                    </form>
                  </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<!-- /.content-wrapper -->
<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>