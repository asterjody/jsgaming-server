<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tambah Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
                <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Tambah Nominal</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/nominal/create" method="POST">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="coinQuantity">Jumlah Koin</label>
                          <input type="number" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Jumlah Koin" required>
                        </div>
                        <div class="form-group">
                          <label>Jenis Koin</label>
                          <select name="coinName" class="form-control select2" style="width: 100%;">
                            <option selected="selected">Jenis Koin</option>
                            <option value="Diamond">Diamond</option>
                            <option value="Gold">Gold</option>
                            <option value="Coin">Coin</option>
                          </select>
                        </div>
                        <div class="form-group">
                          <label for="price">Harga</label>
                          <input type="text" name="price" class="form-control" id="price" placeholder="Harga" onkeypress="return event.charCode >= 48 && event.charCode <=57" required>
                        </div>
                      </div>
                      <!-- /.card-body -->
      
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                      </div>
                    </form>
                  </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<!-- /.content-wrapper -->
